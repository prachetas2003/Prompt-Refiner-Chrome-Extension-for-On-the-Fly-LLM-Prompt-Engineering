{
  "name": "prompt-refiner",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && npm run build:background && npm run fix:manifest",
    "build:background": "esbuild src/background/llmProxy.ts --bundle --format=esm --outfile=dist/background.js --target=es2020 --minify=false",
    "fix:manifest": "node -e \"const fs=require('fs');const m=JSON.parse(fs.readFileSync('dist/manifest.json'));m.background={service_worker:'background.js',type:'module'};fs.writeFileSync('dist/manifest.json',JSON.stringify(m,null,2));\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
