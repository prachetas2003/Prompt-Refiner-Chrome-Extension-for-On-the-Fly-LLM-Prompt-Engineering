    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.20.0",
    "eslint": "^9.31.0",
    "jest": "^30.0.4",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
